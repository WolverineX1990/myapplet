.topic {
	padding: 20rpx;
	width: 100%;
	border-bottom: 1px solid #f0f0f0;
	font-size: 32rpx;
	display: flex;
}

.head-img {
	height: 70rpx;
	width: 70rpx;
}

.tag {
	background-color: #e5e5e5;
	padding: 4rpx 8rpx;
	color: #999;
	font-size: 24rpx;
	height: 45rpx;
	width: 80rpx;
	border-radius: 6rpx;
	text-align: center;
	margin-left: 20rpx;
}

.tag.top {
	background: #80bd01;
	color: #fff;
}

.info {
	width: 500rpx;
	margin-left: 10rpx;
}

.title {
	color: #333;
	width: 460rpx;
	font-size: 32rpx;
}

.desc {
	font-size: 24rpx;
}