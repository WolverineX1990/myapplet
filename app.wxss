/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

view, button {
	box-sizing: border-box;
}

.ellipsis {
	overflow: hidden;
	white-space: nowrap;
    text-overflow: ellipsis;
}

.clearfix:after{
    display: table;
    content:'';
    clear:both;
}

.fl {
	float: left;
}

.fr {
	float: right;
}